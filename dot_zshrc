    echo "ZGenom Init didn't exist"
    # specify plugins here
    zgenom ohmyzsh
    zgenom ohmyzsh plugins/git
    zgenom ohmyzsh plugins/sudo
    zgenom ohmyzsh --completion plugins/docker-compose
    zgenom ohmyzsh plugins/alias-finder
    zgenom ohmyzsh plugins/ansible
    zgenom ohmyzsh plugins/aws
    zgenom ohmyzsh plugins/battery
    zgenom ohmyzsh plugins/catimg
    zgenom ohmyzsh plugins/colored-man-pages
    zgenom ohmyzsh plugins/composer
    zgenom ohmyzsh plugins/dircycle
    zgenom ohmyzsh plugins/dirhistory
    zgenom ohmyzsh plugins/extract
    zgenom ohmyzsh plugins/dirhistory
    zgenom ohmyzsh plugins/gitignore
    zgenom ohmyzsh plugins/history
    zgenom ohmyzsh plugins/ripgrep
    zgenom ohmyzsh plugins/ufw
    zgenom ohmyzsh plugins/zsh-interactive-cd
    zgenom ohmyzsh plugins/systemd
    zgenom ohmyzsh plugins/nmap
    zgenom ohmyzsh plugins/vscode
        
    zgenom load zsh-users/zsh-completions
    zgenom load zsh-users/zsh-autosuggestions
    
    zgenom load romkatv/powerlevel10k powerlevel10k
    zgenom load joshskidmore/zsh-fzf-history-search
    zgenom load MichaelAquilina/zsh-you-should-use

    # generate the init script from plugins above
    zgenom save
    zgenom compile "$HOME/.zshrc"
fi

